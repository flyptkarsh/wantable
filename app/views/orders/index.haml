.row
  .col-md-4
    = form_tag(orders_path, method: :get, :class => "input-group") do
      = text_field_tag(:user_name, params[:user_name], :class => "form-control", :placeholder => 'Search By User Name')
      %span.input-group-btn
        = button_tag(type: "submit", class: "btn btn-default") do
          %i.glyphicon.glyphicon-search

    = form_tag(orders_path, method: :get, :class => "input-group") do
      = text_field_tag(:user_email, params[:user_email], :class => "form-control", :placeholder => 'Search By User Email')
      %span.input-group-btn
        = button_tag(type: "submit", class: "btn btn-default") do
          %i.glyphicon.glyphicon-search

    = form_tag(orders_path, method: :get, :class => "input-group") do
      = text_field_tag(:order_state, params[:order_state], :class => "form-control", :placeholder => 'Search By Order State')
      %span.input-group-btn
        = button_tag(type: "submit", class: "btn btn-default") do
          %i.glyphicon.glyphicon-search

    = form_tag(orders_path, method: :get, :class => "input-group") do
      = text_field_tag(:order_number, params[:order_number], :class => "form-control", :placeholder => 'Search By Order Number')
      %span.input-group-btn
        = button_tag(type: "submit", class: "btn btn-default") do
          %i.glyphicon.glyphicon-search

  .col-md-8
    %h3= @orders.count
    %h4 Result(s)
    %table.table.table-striped
      %tr
        %th.span1 Number
        %th.span2 Email
        %th.span2 Name
        %th.span1 State
        %th.span2 Created At
        %th.span2 Details
      - @orders.each do |order|
        %tr
          %td= order.number
          %td= order.user.email
          %td= order.user.name
          %td= order.state
          %td= order.created_at
          %td= link_to("Details", order_path(order.number))
